<Window x:Class="Integrated_AI.RestoreSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="Select Backup to Restore" Height="400" Width="600" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainContentBackgroundBrush}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:Theme/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Select a backup to restore:" Style="{StaticResource TextBlockDefaultBold}" Margin="0,0,0,10"/>
        <ListBox Grid.Row="1" x:Name="BackupListBox" SelectionMode="Single" 
                 hc:ListBoxAttach.IsOddEvenRow="True" AlternationCount="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Restore" Style="{StaticResource ButtonPrimary}" Width="80" Margin="0,0,10,0" Click="RestoreButton_Click"/>
            <Button Content="Compare" Width="80" Margin="0,0,10,0" Click="CompareButton_Click"/>
            <Button Content="Delete All Backups" Style="{StaticResource ButtonDanger}" Width="130" Margin="0,0,10,0" Click="DeleteButton_Click"/>
            <Button Content="Open Backup Folder" Width="130" Margin="0,0,10,0" Click="OpenBackups_Click"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
