<UserControl x:Class="Integrated_AI.ChatWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Height="Auto"
             Width="Auto"
             GotFocus="Window_GotFocus" LostFocus="Window_LostFocus">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:Theme/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{DynamicResource MainContentBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <ComboBox x:Name="UrlSelector" MaxWidth="200" MinWidth="100" Margin="5" SelectionChanged="UrlSelector_SelectionChanged"
                      DisplayMemberPath="DisplayName" SelectedValuePath="Url" SelectedIndex="0"/>
            <hc:SplitButton x:Name="VSToAISplitButton" 
                            Margin="5" 
                            Content="Method -> AI" 
                            Click="SplitButtonToAI_Click" 
                            PreviewMouseDown="SplitButton_PreviewMouseDown"
                            HorizontalAlignment="Stretch">
                <hc:SplitButton.DropDownContent>
                    <StackPanel>
                        <MenuItem Header="File -> AI" Click="MenuItemToAI_Click" Tag="File -> AI"/>
                        <MenuItem Header="Code -> AI" Click="MenuItemToAI_Click" Tag="Code -> AI"/>
                        <MenuItem Header="Method -> AI" Click="MenuItemToAI_Click" Tag="Method -> AI"/>
                        <MenuItem Header="Error -> AI" Click="MenuItemToAI_Click" Tag="Error -> AI"/>
                        <MenuItem Header="Exception -> AI" Click="MenuItemToAI_Click" Tag="Exception -> AI"/>
                    </StackPanel>
                </hc:SplitButton.DropDownContent>
            </hc:SplitButton>
            <hc:SplitButton x:Name="AIToVSSplitButton" 
                            Margin="5" 
                            Content="Method -> VS" 
                            Click="SplitButtonToVS_Click" 
                            PreviewMouseDown="SplitButton_PreviewMouseDown"
                            HorizontalAlignment="Stretch">
                <hc:SplitButton.DropDownContent>
                    <StackPanel>
                        <MenuItem Header="Method -> VS" Click="MenuItemToVS_Click" Tag="Method -> VS"/>
                        <MenuItem Header="File -> VS" Click="MenuItemToVS_Click" Tag="File -> VS"/>
                        <MenuItem Header="Code -> VS" Click="MenuItemToVS_Click" Tag="Code -> VS"/>
                    </StackPanel>
                </hc:SplitButton.DropDownContent>
            </hc:SplitButton>
            
            <Button x:Name="AcceptButton" Content="Accept" Style="{StaticResource ButtonSuccess}" Click="AcceptButton_Click" hc:BorderElement.CornerRadius="5,0,0,5" Margin="5,0,0,0" Visibility="Collapsed"/>
            <Button x:Name="ChooseButton" Content="Choose code" Click="ChooseButton_Click" Style="{StaticResource ButtonWarning}" hc:BorderElement.CornerRadius="0" Margin="0" Visibility="Collapsed"/>
            <Button x:Name="DeclineButton" Content="Decline" Style="{StaticResource ButtonDanger}" Click="DeclineButton_Click" hc:BorderElement.CornerRadius="0,5,5,0" Margin="0,0,5,0" Visibility="Collapsed"/>
            <Button x:Name="RestoreButton" Content="Restore" Click="RestoreButton_Click" Margin="5"/>
            
            <Button HorizontalAlignment="Right" Click="ButtonConfig_Click" Name="ButtonConfig" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource ConfigGeometry}"/>
            <Popup AllowsTransparency="True" PlacementTarget="{Binding ElementName=ButtonConfig}" HorizontalOffset="0" Name="PopupConfig" VerticalOffset="6" StaysOpen="False" Width="300">
                <Border Background="{DynamicResource RegionBrush}" CornerRadius="4" Margin="16" Effect="{StaticResource EffectShadow2}">
                    <StackPanel Button.Click="ButtonSkins_OnClick">
                        <hc:Divider Width="250" Margin="0,10" Content="Application Theme"/>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button Tag="{x:Static hc:ApplicationTheme.Light}" Style="{StaticResource ButtonCustom}">
                                <Border Background="White" Width="32" Height="21" CornerRadius="2" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}"/>
                            </Button>
                            <Button Tag="{x:Static hc:ApplicationTheme.Dark}" Style="{StaticResource ButtonCustom}" Margin="10,0,0,0">
                                <Border Background="Black" Width="32" Height="21" CornerRadius="2" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}"/>
                            </Button>
                        </StackPanel>

                        <hc:Divider Width="250" Margin="0,10" Content="Options"/>
                        <StackPanel Margin="0,0,0,10" HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="Auto Diff Compare" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,10,0"/>
                            <ToggleButton x:Name="AutoDiffToggle" BorderThickness="0" IsChecked="True" Margin="5,0,5,0" Style="{StaticResource ToggleButtonFlip}" ToolTip="Toggle Auto Diff Mode" ToolTipService.Placement="Bottom" ToolTipService.InitialShowDelay="1000">
                                <hc:StatusSwitchElement.CheckedElement>
                                    <Border Background="{DynamicResource SecondaryBorderBrush}">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Off" Foreground="{DynamicResource TextIconBrush}"/>
                                    </Border>
                                </hc:StatusSwitchElement.CheckedElement>
                                <Border Background="{DynamicResource PrimaryBrush}">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Auto" FontSize="10" Foreground="{DynamicResource TextIconBrush}"/>
                                </Border>
                            </ToggleButton>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,10" HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="Auto Method Match" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,10,0"/>
                            <ToggleButton x:Name="AutoMethodMatch" BorderThickness="0" IsChecked="False" Margin="5,0,5,0" Style="{StaticResource ToggleButtonFlip}" ToolTip="Toggle auto method match for manual diff mode" ToolTipService.Placement="Bottom" ToolTipService.InitialShowDelay="1000">
                                <hc:StatusSwitchElement.CheckedElement>
                                    <Border Background="{DynamicResource SecondaryBorderBrush}">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Off" Foreground="{DynamicResource TextIconBrush}"/>
                                    </Border>
                                </hc:StatusSwitchElement.CheckedElement>
                                <Border Background="{DynamicResource PrimaryBrush}">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Auto" FontSize="10" Foreground="{DynamicResource TextIconBrush}"/>
                                </Border>
                            </ToggleButton>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,10" HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="Create Restore on Accept" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,10,0"/>
                            <ToggleButton x:Name="AutoRestore" BorderThickness="0" IsChecked="False" Margin="5,0,5,0" Style="{StaticResource ToggleButtonFlip}" ToolTip="Toggle creation of restore point every time a diff is accepted" ToolTipService.Placement="Bottom" ToolTipService.InitialShowDelay="1000">
                                <hc:StatusSwitchElement.CheckedElement>
                                    <Border Background="{DynamicResource SecondaryBorderBrush}">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Off" Foreground="{DynamicResource TextIconBrush}"/>
                                    </Border>
                                </hc:StatusSwitchElement.CheckedElement>
                                <Border Background="{DynamicResource PrimaryBrush}">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Auto" FontSize="10" Foreground="{DynamicResource TextIconBrush}"/>
                                </Border>
                            </ToggleButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Popup>
            
            
            <Button Click="DebugButton_Click" BorderThickness="0" BorderBrush="{StaticResource BorderBrush}" hc:BorderElement.CornerRadius="15" Width="10" Height="10" hc:IconElement.Geometry="{StaticResource InfoGeometry}" Margin="5" Padding="0" Visibility="Collapsed"/>
            
        </StackPanel>
        <wpf:WebView2 x:Name="ChatWebView" Grid.Row="1" Source="https://grok.com"/>
    </Grid>
</UserControl>