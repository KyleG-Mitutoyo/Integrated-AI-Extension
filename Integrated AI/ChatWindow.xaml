<UserControl x:Class="Integrated_AI.ChatWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Height="Auto"
             Width="Auto">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:Theme/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Basic/Colors/Light.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <ComboBox x:Name="UrlSelector" Width="200" Margin="5" SelectionChanged="UrlSelector_SelectionChanged"
                      DisplayMemberPath="DisplayName" SelectedValuePath="Url" SelectedIndex="0"/>
            <hc:SplitButton x:Name="VSToAISplitButton" 
                            Margin="5" 
                            Content="Code -> AI" 
                            Click="SplitButton_Click" 
                            PreviewMouseDown="SplitButton_PreviewMouseDown"
                            HorizontalAlignment="Stretch">
                <hc:SplitButton.DropDownContent>
                    <StackPanel>
                        <MenuItem Header="File -> AI" Click="MenuItem_Click" Tag="File -> AI"/>
                        <MenuItem Header="Code -> AI" Click="MenuItem_Click" Tag="Code -> AI"/>
                        <MenuItem Header="Function -> AI" Click="MenuItem_Click" Tag="Function -> AI"/>
                    </StackPanel>
                </hc:SplitButton.DropDownContent>
            </hc:SplitButton>
            <hc:SplitButton x:Name="ErrortoAISplitButton" 
                            Margin="5" 
                            Content="Error -> AI" 
                            Click="ErrortoAISplitButton_Click" 
                            PreviewMouseDown="SplitButton_PreviewMouseDown"
                            HorizontalAlignment="Stretch">
                <hc:SplitButton.DropDownContent>
                    <StackPanel>
                        <MenuItem Header="Error -> AI" Click="MenuItem_Click" Tag="Error -> AI"/>
                        <MenuItem Header="Exception -> AI" Click="MenuItem_Click" Tag="Exception -> AI"/>
                    </StackPanel>
                </hc:SplitButton.DropDownContent>
            </hc:SplitButton>
            <Button x:Name="PasteButton" Content="AI -> VS" Click="PasteButton_Click" Visibility="Visible" Margin="5"/>
            <Button x:Name="AcceptButton" Content="Accept" Style="{StaticResource ButtonSuccess}" Click="AcceptButton_Click" hc:BorderElement.CornerRadius="5,0,0,5" Margin="5,0,0,0" Visibility="Collapsed"/>
            <Button x:Name="DeclineButton" Content="Decline" Style="{StaticResource ButtonDanger}" Click="DeclineButton_Click" hc:BorderElement.CornerRadius="0,5,5,0" Margin="0,0,5,0" Visibility="Collapsed"/>
        </StackPanel>
        <wpf:WebView2 x:Name="ChatWebView" Grid.Row="1" Source="https://grok.com"/>
    </Grid>
</UserControl>