<local:ThemedWindow x:Class="Integrated_AI.ChooseCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:Integrated_AI"
        Title="Choose Code to Replace" Height="500" Width="800" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainContentBackgroundBrush}">
    <local:ThemedWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:Theme/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </local:ThemedWindow.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="FunctionHeaderColumn" Width="*"/>
                <ColumnDefinition x:Name="FileHeaderColumn" Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="FunctionHeader" Grid.Column="0" Text="Functions in Active Document:" Style="{StaticResource TextBlockDefaultBold}" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Grid x:Name="FileHeaderGrid" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="FileHeader" Grid.Column="0" Text="Project Files:" Style="{StaticResource TextBlockDefaultBold}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,0">
                    <hc:ButtonGroup>
                        <RadioButton x:Name="CodeFilesRadioButton" Content="Code files" Width="80" Height="25" Padding="0" GroupName="FileFilter" 
                                 VerticalAlignment="Center"
                                 ToolTip="Show only common code files"
                                 Checked="FilterRadioButton_Checked"/>
                        <RadioButton x:Name="OpenedFilesRadioButton" Content="Opened files" Width="80" Height="25" Padding="0" Margin="0,0,0,0"
                                 GroupName="FileFilter" VerticalAlignment="Center" IsChecked="True"
                                 ToolTip="Show only files currently opened in the code editor"
                                 Checked="FilterRadioButton_Checked"/>
                        <RadioButton x:Name="AllFilesRadioButton" Content="All files" Width="80" Height="25" Margin="0,0,0,0"
                                 GroupName="FileFilter" VerticalAlignment="Center"
                                 ToolTip="Show all files in the project"
                                 Checked="FilterRadioButton_Checked"/>
                    </hc:ButtonGroup>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="FunctionColumn" Width="*"/>
                <ColumnDefinition x:Name="FileColumn" Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" x:Name="FunctionListBox" SelectionMode="Single" 
                     MouseDoubleClick="FunctionListBox_MouseDoubleClick" Margin="0,0,5,0">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource ListBoxItemBaseStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ListBoxDisplayName}" Value="----- All Functions in Active Document -----">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ListBoxDisplayName}" Value="----- Recent Functions -----">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ListBoxDisplayName}" FontSize="14" TextWrapping="Wrap">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{Binding FullName}"/>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox Grid.Column="1" x:Name="FileListBox" SelectionMode="Single" 
                     MouseDoubleClick="FileListBox_MouseDoubleClick" Margin="5,0,0,0">
                <!-- UPDATED: Style to make folders and headers bold and non-selectable without graying them out -->
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource ListBoxItemBaseStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Type}" Value="folder">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ListBoxDisplayName}" Value="----- Project Files -----">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ListBoxDisplayName}" FontSize="14" TextWrapping="Wrap">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{Binding FullName}"/>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Select" Style="{StaticResource ButtonPrimary}" Width="80" Margin="0,0,10,0" Click="SelectButton_Click"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</local:ThemedWindow>